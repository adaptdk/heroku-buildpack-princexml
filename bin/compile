#!/bin/bash

PRINCE_VERSION="11.1"
echo "-----> Installing PrinceXML $PRINCE_VERSION"
[ -d .downloads ] || mkdir .downloads
(cd .downloads; [ -d "prince-$PRINCE_VERSION-linux-generic-x86_64" ] ||
  curl -s http://www.princexml.com/download/prince-$PRINCE_VERSION-linux-generic-x86_64.tar.gz | tar xzf -)

LICENSE_FILE=$3/PRINCEXML_LICENSE
if [ -f $LICENSE_FILE ]; then
	echo "       Configuring license file"
	cp $LICENSE_FILE ./.downloads/prince-$PRINCE_VERSION-linux-generic-x86_64/lib/prince/license/license.dat
else
	echo "       No license found"
fi

echo "       Installing EmojiOne font"
EMOJIONE_FONT_FILE=emojione-svg.otf
(cd .downloads; [ -f $EMOJIONE_FONT_FILE ] ||
  (curl -L https://github.com/emojione/emojione-assets/releases/download/3.1.2/emojione-svg.otf -o $EMOJIONE_FONT_FILE && mv -vi $EMOJIONE_FONT_FILE /usr/local/share/fonts && fc-cache -vf))

echo "       Patching fonts.css"
pushd .downloads
patch -f -r - -p1 <<EOF
diff -ru a/prince-11.1-linux-generic-x86_64/lib/prince/style/fonts.css b/prince-11.1-linux-generic-x86_64/lib/prince/style/fonts.css
--- a/prince-11.1-linux-generic-x86_64/lib/prince/style/fonts.css 2017-02-23 04:52:59.000000000 +0100
+++ b/prince-11.1-linux-generic-x86_64/lib/prince/style/fonts.css 2017-10-04 14:28:16.855990455 +0200
@@ -131,3 +131,8 @@
     src: prince-lookup("Comic Sans MS"), prince-lookup("DejaVu Sans"), prince-lookup("DejaVu LGC Sans"), prince-lookup("Liberation Sans")
 }

+/* emoji font */
+@font-face {
+    font-family: sans-serif;
+    src: prince-lookup("EmojiOne")
+}
EOF
popd

echo $1 | ./.downloads/prince-$PRINCE_VERSION-linux-generic-x86_64/install.sh
cat >$1/bin/prince <<EOF
#!/bin/sh
exec /app/lib/prince/bin/prince --prefix="/app/lib/prince" "\$@"
EOF
